<div class="page-header">
  <h3>Response #<%= @response.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Body</dt>
      <dd><%= @response.body %></dd>

      <dt>Image</dt>
      <dd><%= @response.image %></dd>

      <dt>Video</dt>
      <dd><%= @response.video %></dd>

      <dt>User</dt>
      <dd><%= @response.user_id %></dd>

      <dt>Publication</dt>
      <dd><%= @response.publication_id %></dd>

      <dt>Smack</dt>
      <dd><%= @response.smack_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/responses" class="btn btn-primary">
        Back
      </a>
      <a href="/responses/<%= @response.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_response/<%= @response.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
