  <div class="page-header">
    <div class="row">
      <div class="col-md-12">
        <a href="/leagues/<%= cookies[:current_league_id] %>/publications/new" class="btn btn-primary btn-block"> Write a Publication <i class="fa fa-newspaper-o"></i> </a>
      </div>
    </div>
  </div>


  <% @publications.each do |publication| %>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"> <a href="/users/<%= publication.user.id %>"> <img src="<%= publication.user.avatar %>" width="60"> </a> <a href="/leagues/<%= cookies[:current_league_id] %>/publications/<%= publication.id %>"> <%= publication.title %> </a> <small> <%= time_ago_in_words(publication.created_at) %> ago </small> </h3>
        </div>
        <div class="panel-body">
          <p>
            <div class="well well-sm">
              <%= publication.body %>
            </div>
          </p>

          <!-- Code for existing responses-->
          <ul class="media-list">
            <% publication.responses.each do |response| %>
            <li class="media">
              <div class="media-body">
                <h6 class="media-heading">
                  <a href="/users/response.user_id"> <%= response.user.username %> </a> <small> (<%= time_ago_in_words(response.created_at) %> ago) </small>
                </h6>
                <p>
                  <%= response.body %>
                </p>
                <% end %>

                <!-- Code for new response form-->
                <li class="media">
                  <div class="media-body">
                    <form action="/create_response" method="post">
                      <!-- Hidden input for authenticity token to protect from forgery -->
                      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

                      <!-- Label and input for body -->
                      <input type="text" id="body" name="body" placeholder="Respond to this publication..." class="form-control">

                      <!-- Label and input for user_id -->
                      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">

                      <!-- Label and input for publication_id -->
                      <input type="hidden" id="publication_id" name="publication_id" placeholder="Publication" class="form-control" value="<%= publication.id %>">
                    </form>
                  </div>
                </li>
                <!-- End code for new response form-->
              </ul>

            </div>
          </div>
        </div>

      </div>
      <% end %>
