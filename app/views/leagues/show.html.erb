<div class="page-header">
  <h3>League #<%= @league.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @league.name %></dd>

      <dt>User</dt>
      <dd><%= @league.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/leagues" class="btn btn-primary">
        Back
      </a>
      <a href="/leagues/<%= @league.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_league/<%= @league.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
