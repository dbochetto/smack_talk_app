<div class="page-header">
  <h1>
    Publications
    <a href="/publications/new" class="btn btn-lg btn-success">New Publication</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>League</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.title %></td>
        <td><%= publication.body %></td>
        <td><%= publication.league_id %></td>
        <td><%= publication.user_id %></td>
        <td>
          <a href="/publications/<%= publication.id %>" class="btn btn-primary">Show</a>
          <a href="/publications/<%= publication.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_publication/<%= publication.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
