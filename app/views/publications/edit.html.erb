<!-- Validation failure messages -->
<% if @publication.errors.any? %>
  <% @publication.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Publication #<%= @publication.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_publication/<%= @publication.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @publication.title %>">
      </div>

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @publication.body %></textarea>
      </div>

      <!-- Label and input for league_id -->
      <div class="form-group">
        <label for="league_id" class="control-label">
          League
        </label>

        <input type="text" id="league_id" name="league_id" placeholder="League" class="form-control" value="<%= @publication.league_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @publication.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Publication
      </button>
      or
      <a href="/publications/<%= @publication.id %>">Cancel</a>
    </form>
  </div>
</div>
