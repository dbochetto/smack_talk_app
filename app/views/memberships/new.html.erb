<!-- Validation failure messages -->
<% if @membership.errors.any? %>
  <% @membership.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Membership</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_membership" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for league_id -->
      <div class="form-group">
        <label for="league_id" class="control-label">
          League
        </label>

        <input type="text" id="league_id" name="league_id" placeholder="League" class="form-control" value="<%= @membership.league_id %>">
      </div>

      <!-- Label and input for user_id -->
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">

      <button class="btn btn-success">
        Create Membership
      </button>
      or
      <a href="/memberships">Cancel</a>
    </form>
  </div>
</div>
