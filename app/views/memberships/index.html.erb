<div class="page-header">
  <h1>
    My Fantasy Leagues
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>League Name</th>
      </tr>

      <% @memberships.each do |membership| %>
      <% league_each = League.find_by({ :id => membership.league_id}) %>
      <tr>
        <td> <a href="/leagues/<%= league_each.id %>/smacks"> <%= league_each.name %> </a> </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
